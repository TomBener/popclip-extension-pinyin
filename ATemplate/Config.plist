<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!-- DOCS: https://github.com/pilotmoon/PopClip-Extensions -->
<plist version="1.0">
  <dict>
    <key>Extension Name</key>
    <!-- replace your extension name -->
    <string>{EXT_NAME}</string>
    <key>Extension Identifier</key>
    <!-- change your extension id -->
    <string>org.phpz.popclip.extension.{EXT_ID}</string>
    <key>Extension Description</key>
    <!-- and description -->
    <string>{EXT_DESCRIPTION}</string>
    <key>Actions</key>
    <!-- for more infomation visit https://github.com/pilotmoon/PopClip-Extensions -->
    <array>
      <dict>
        <key>URL</key>
        <string>http://phpz.org/popclip/{popclip text}</string>
        <key>Image File</key>
        <string>icon.png</string>
        <key>Title</key>
        <string>{ACTION_NAME}</string>
        <key>Regular Expression</key>
        <string>(?s)^.{1,777}$</string>
      </dict>
    </array>
  </dict>
</plist>
